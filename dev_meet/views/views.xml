    <!-- Top menu item -->

    <menuitem name="DevMeet" id="dev_meet.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Personas" id="dev_meet.menu_people" parent="dev_meet.menu_root"/>

    <!-- actions -->

    <menuitem name="Desarrolladores" id="dev_meet.menu_developers_list" parent="dev_meet.menu_people"
              action="dev_meet.action_developer_window"/>

  </data>
</odoo>