      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="DevMeet" id="dev_meet.menu_root"/>

    <!-- menu categories -->

    <!-- <menuitem name="Tecnologías" id="dev_meet.menu_technology" parent="dev_meet.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Desarrolladores" id="dev_meet.menu_developers_list" parent="dev_meet.menu_root"
              action="dev_meet.action_developer_window"/>

    <menuitem name="Tecnologías" id="dev_meet.menu_technology_list" parent="dev_meet.menu_root"
              action="dev_meet.action_technology_window"/>

    <menuitem name="Eventos" id="dev_meet.menu_event_list" parent="dev_meet.menu_root"
              action="dev_meet.action_event_window"/>

    <menuitem name="Eventos" id="dev_meet.menu_room_list" parent="dev_meet.menu_root"
              action="dev_meet.action_room_window"/>

  </data>
</odoo>